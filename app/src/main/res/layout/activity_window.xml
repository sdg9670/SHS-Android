<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/windowSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Spinner>

        <Button
            android:id="@+id/windowButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인"/>

    </LinearLayout>

    <TextView
        android:id="@+id/windowStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp" />


    <LinearLayout
        android:id="@+id/windowSelectLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="invisible">

        <Spinner
            android:id="@+id/windowSelectSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Spinner>

        <Button
            android:id="@+id/windowStatusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/windowOnOffLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="invisible">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rdOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="활성화" />

            <RadioButton
                android:id="@+id/rdOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비활성화" />

        </RadioGroup>
        <Button
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="설정"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/openLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="열기"
            android:textSize="15dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/openCheckLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left|center">

                <CheckBox
                    android:id="@+id/openCheck1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/openEdit1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <Spinner
                    android:id="@+id/openValueSpinner1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></Spinner>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/openCheckLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center">

                <CheckBox
                    android:id="@+id/openCheck2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/openEdit2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <Spinner
                    android:id="@+id/openValueSpinner2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></Spinner>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/openCheckLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center">

                <CheckBox
                    android:id="@+id/openCheck3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/openValueSpinner3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></Spinner>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/closeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닫기"
            android:textSize="15dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/closeCheckLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center">

                <CheckBox
                    android:id="@+id/closeCheck1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/closeEdit1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <Spinner
                    android:id="@+id/closeValueSpinner1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></Spinner>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/closeCheckLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center">

                <CheckBox
                    android:id="@+id/closeCheck2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/closeEdit2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <Spinner
                    android:id="@+id/closeValueSpinner2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></Spinner>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/closeCheckLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center">

                <CheckBox
                    android:id="@+id/closeCheck3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/closeValueSpinner3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></Spinner>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
