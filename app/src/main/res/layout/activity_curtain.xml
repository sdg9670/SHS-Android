<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <Spinner
                android:id="@+id/curtainSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">
            </Spinner>

            <Button
                android:id="@+id/curtainButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="확인">

            </Button>
        </LinearLayout>

        <TextView
            android:id="@+id/curtainStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"/>


        <LinearLayout
            android:id="@+id/curtainSelectLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible">

            <Spinner
                android:id="@+id/curtainSelectSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></Spinner>
            <Button
                android:id="@+id/curtainStatusButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="확인"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/curtainOnOffLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdOn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="활성화" />

                <RadioButton
                    android:id="@+id/rdOff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비활성화" />

            </RadioGroup>
            <Button
                android:id="@+id/sendButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="설정"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/openLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="열기"
                android:textSize="15dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/openCheckLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/openCheck1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/openEdit1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                    <Spinner
                        android:id="@+id/openValueSpinner1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></Spinner>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/closeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닫기"
                android:textSize="15dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/closeCheckLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/closeCheck1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/closeEdit1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                    <Spinner
                        android:id="@+id/closeValueSpinner1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></Spinner>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

